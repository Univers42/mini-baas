{
  "name": "ft-transcendence",
  "version": "0.0.0",
  "private": true,
  "description": "ft_transcendence monorepo â€” hooks and workspace root",
  "scripts": {
    "prepare": "git config --local core.hooksPath vendor/scripts/hooks || true",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --passWithNoTests",
    "test:e2e": "jest --config ./test/jest-e2e.json --passWithNoTests"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.14",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.1.14",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-socket.io": "^11.1.14",
    "@nestjs/schedule": "^6.1.1",
    "@nestjs/swagger": "^11.2.6",
    "@nestjs/testing": "^11.1.14",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/client": "^7.4.1",
    "@tanstack/react-query": "^5.90.21",
    "@types/react": "^19.2.14",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "helmet": "^8.1.0",
    "prisma": "^7.4.1",
    "react-router-dom": "^7.13.1",
    "supertest": "^7.2.2"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/jest": "^30.0.0",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "prettier": "^3.8.1"
  }
}
