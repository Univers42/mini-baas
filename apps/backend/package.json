    "cookie-parser": "^1.4.7",
    "dotenv": "^16.6.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.0",
    "multer": "^2.0.0",
    "nodemailer": "^8.0.0",
    "passport": "^0.7.0",
    "passport-42": "^1.2.6",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.0",
    "socket.io": "^4.8.0",
    "uuid": "^11.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^6.4.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.0",
    "prisma": "^7.0.0",
    "rimraf": "^6.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.0",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.7.0",
    "typescript-eslint": "^8.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "sharp",
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "@nestjs/core",
      "@scarf/scarf"
    ],
    "overrides": {
      "hono": ">=4.11.7",
      "lodash": ">=4.17.23"
    },
    "auditConfig": {
      "ignoreCves": [
        "CVE-2025-69873"
      ],
      "ignoreGhsas": [
        "GHSA-2g4f-4pwh-qvx6"
      ]
    }
  }
}
